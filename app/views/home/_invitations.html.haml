- if current_user.invited_by
  %br
  %h1.lined
    %span Account Details
  %div
    Your account was created by
    %strong= current_user.invited_by.display_name
    and their email is
    %strong= mail_to current_user.invited_by.email

- if policy(current_user).invites?
  %br
  %h1.lined
    %span Organizations and Users
  - current_user.invited_users.chunk(&:company).each do |company, users|
    .dashboard-table
      %header
        .logo
          %i.icon-users
        .orgname= company.name
        .usercount
          %div
            = pluralize(users.count, "Active User")
        .op
          %span Potential Seats
          = company.potential_seats_invited_by(current_user)
      %table
        %thead
          %tr
            %th
            %th Name
            %th E-Mail
            %th Title
            %th Expirations
            %th Admin
        %tbody
          - users.each do |user|
            %tr
              %td.avatar
                %img{src: user.avatar_url}
              %td.name= user.display_name
              %td= user.email
              %td= user.job_title
              %td
                .expiration
                  = l user.authentication_user_integration.directory_expiration_date
                  - if prolongation = user.authentication_user_integration.directory_prolongations.last
                    %span{data: {content: "Reason: #{prolongation.reason}", placement: "bottom", toggle: "popover", trigger: 'hover'}}
                      (Prolonged)
                  - else
                    %a.prolong-account-link{href: '#', data: {target: "#prolong-account-modal", toggle: 'modal', id: user.authentication_user_integration.id, username: user.authentication_user_integration.directory_username, date: l(user.authentication_user_integration.directory_expiration_date+1.month), name: user.display_name}}
                      (Prolong)
              %td
                %a{href: user_path(user), rel: "nofollow", data: {confirm: "Do you want to delete this account? The users account will permanently be deleted.", method: "delete"}}
                  %i.icon-ban

  %div{style: 'margin-top: 30px'}
    %a.btn.btn-success.pull-left{href: 'javascript:void', disabled: ('true' if current_user.invitations_left <= 0), data: ({target: "#new-invite-modal", toggle: "modal"} if current_user.invitations_left > 0)}
      Invite user