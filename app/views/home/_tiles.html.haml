.col-md-12.col-lg-8.col-sm-12
  .ibox
    .ibox-title
      %a.btn.btn-success.btn-xs.pull-right{href: '#', data: {target: "#dashboard-invite-modal", toggle: "modal"}}
        Invite user
      %h5 Invitation Statistics
    .ibox-content
      .row
        .col-sm-6.col-md-6
          %h1.no-margins= current_user.total_invitations
          .font-bold.text-navy Total Invitations
        .col-sm-6.col-md-6
          %h1.no-margins= current_user.invitations_left
          %div Remaining Invitations
          .progress
            .progress-bar.progress-bar-warning{role: "progressbar", style: "width:#{current_user.intitations_used_percents}%"}
.col-sm-6.col-md-6.col-lg-4
  .ibox
    .ibox-title
      %h5 Accounts
    .ibox-content
      %h1.no-margins
        = current_user.expiring_invited_users.size
      Accounts Expiring Soon

#dashboard-invite-modal.modal.fade{role: "dialog", tabindex: "-1"}
  .modal-dialog
    .modal-content{style: "text-align: left"}
      = bootstrap_form_for(@invitation) do |f|
        .modal-header
          %button.close{type: 'button', data: {dismiss: 'modal'}}
            %span Ã—
          .td-dialog
            %h1 Invite User
        .modal-body
          = render 'invitations/form', f: f
        .modal-footer
          %button.btn.btn-default.pull-left{type: "button", data: {dismiss: 'modal'}} Cancel
          %button#send-invite.btn.btn-success{type: "submit"} Send Invite
