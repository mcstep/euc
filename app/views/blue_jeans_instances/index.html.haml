.col-md-12.col-sm-12.col-lg-12

  = render 'layouts/services_menu'

  .panel.panel-default
    = form_tag blue_jeans_instances_path, method: :get, class: 'panel-body' do |f|
      = link_to 'Add instance', new_blue_jeans_instance_path, class: 'btn btn-success pull-left'
      .input-group
        %input.form-control{name: "search", placeholder: "Search instances by client id...", type: "text", value: params[:search]}
        %span.input-group-btn
          %button.btn.btn-default{type: "submit"} Search!

  .panel.panel-default
    .panel-heading
      %h3.panel-title
        = pluralize @blue_jeans_instances.size, 'instance'
        found
    %table.table.table-striped.table-bordered
      %thead
        %tr
          %th Name
          %th Actions
      %tbody
        - @blue_jeans_instances.each do |blue_jeans_instance|
          %tr
            %td= blue_jeans_instance.title
            %td
              = link_to 'Edit', edit_blue_jeans_instance_path(blue_jeans_instance), class: 'btn btn-xs btn-warning'
              = link_to 'Delete', blue_jeans_instance, method: :delete, data: { confirm: 'This blue_jeans_instance will be deleted'}, class: "btn btn-xs btn-danger"