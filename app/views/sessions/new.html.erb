<div id="signin">
        <div class="bg clear">
                <h3>Welcome! Please Sign in</h3>

                <div class="content">
                  <%= form_tag sessions_path, :class => 'signin_form' do %>
                  <div class="fields">
                    <%= label_tag :username %><br />
                    <%= text_field_tag :username, params[:username], :class => "form-control" %>
                  </div>
                  <div class="fields">
                    <%= label_tag :password %><br />
                    <%= password_field_tag :password, params[:password], :class => "form-control" %>
                  </div>
                  <div class="actions">
                     <%= submit_tag "Log in", :class => "btn btn-primary btn-lg" %>
                  </div>
                  <% end %>
                </div>

                <div class="bottom-wrapper">
                        <div class="message">
                                <span>Forgot password?</span>
                                <a href="#" data-toggle="modal" data-target="#password-reset-modal">Click here to reset</a><br/>
                                <span>Don't have an account?</span>
                                <a href="<%= sign_up_path %>">Sign up here</a>
                        </div>
                </div>
        </div>


	<!-- Form with Validation Modal -->
	<div class="modal fade" id="password-reset-modal" tabindex="-1" role="dialog">
	  	<div class="modal-dialog">
		    <div class="modal-content">
		    	<form id="password-reset-form" method="post" action="/password_reset" role="form">
			      	<div class="modal-header">
			        	<button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
			        	<h4 class="modal-title" id="myModalLabel">
			        		Reset Password
			        	</h4>
			      	</div>
			      	<div class="modal-body">
						<input type="hidden" value="<%= form_authenticity_token() %>" name="authenticity_token" %>
						<div class="form-group">
					    	<label>Email:</label>
					    	<input type="text" name="email" class="form-control" />
					  	</div>
				                <div class="info">
				                  A new password will be sent to the email.</strong>
				                </div>
			      	</div>
			      	<div class="modal-footer">
				        <button type="button" class="btn btn-default" data-dismiss="modal">Cancel</button>
				        <button type="submit" class="btn btn-success" id="send-invite" >Reset Password</button>
			      	</div>
			</form>
		    </div>
	  	</div>
	</div>
</div>
