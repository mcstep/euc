.col-lg-8.col-offset-lg-2.col-md-8.col-md-offset-2.col-sm-12.td-dialog.td-signup
  %h1 Login
  .login
    .col-lg-12.col-md-12.col-sm-12.blurb
      %h3
        Welcome to VMware TestDrive for End-User Computing
    .col-lg-7.col-md-7.col-sm-12.blurb
      %p
        TestDrive is a fully featured, integrated and globally available demonstration environment provided by VMware for use by our Field, Partners and Customers.
      %p 
        Powered by 
        %a{:href => "https://www.vmware.com/products/workspace-suite", :target => "_blank"} VMware Workspace Suite, 
        TestDrive features Identity Manager, Horizon desktop and application virtualization, Horizon FLEX and AirWatch enterprise mobility management.
      %p
        Check out our 
        %a{:href => "http://support.vmtestdrive.com/article/3-registration", :target => "_blank"} knowledge base 
        for assistance with Registration, activation, passwords, customer invites and demo walkthroughs!
    .col-lg-5.col-md-5.col-sm-12.loginbox
      = form_tag sessions_path do
        = render "layouts/messages"
        .form-group
          = text_field_tag :username, params[:username], :class => "form-control", placeholder: 'Username', required: true
        .form-group
          = password_field_tag :password, params[:password], :class => "form-control", placeholder: 'Password', required: true
        %button.btn.btn-info.loginbutton{:type => "submit"} Login
        %p
          %a.text-muted{"data-target" => "#password-reset-modal", "data-toggle" => "modal", :href => "#"}
            %small Forgot password?
        %p.text-muted
          %small
            Don't have an account?
            %a{:href => "/register"} Sign up here
    .clear

#password-reset-modal.modal.fade{:role => "dialog", :tabindex => "-1"}
  .modal-dialog
    .modal-content
      = form_tag '/password_reset' do
        .modal-header
          %button.close{"aria-label" => "Close", "data-dismiss" => "modal", :type => "button"}
            %span{"aria-hidden" => "true"} Ã—
          .td-dialog
            %h1 Reset Password
        .modal-body
          .form-group
            %label Email:
            %input.form-control{:name => "email", :type => "text"}
          .info
            %strong A new password will be sent to the email.
        .modal-footer
          %button.btn.btn-default.pull-left{"data-dismiss" => "modal", :type => "button"} Cancel
          %button#send-invite.btn.btn-success{:type => "submit"} Reset Password