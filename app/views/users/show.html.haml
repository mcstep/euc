.alert.alert-warning
  %h4 You are viewing another TestDrive User
  %p
    %a.btn.btn-warning.btn-xs{href: "#"} Return to Dashboard
.col-sm-12.col-md-12.col-lg-12.usercard
  .region.amer
    %p AMER
  .col-xs-12.col-sm-12.col-md-12.col-lg-3.avatar
    .avatar-img
      = image_tag @user.avatar_url
    - if @user.invited_by
      .user-inviter
        .user-inviter-img
          = image_tag @user.invited_by.avatar_url
        %p
          %span.firstname= @user.invited_by.first_name
          %span.lastname= @user.invited_by.last_name
  .col-xs-12.col-sm-12.col-md-12.col-lg-7.user-details
    .name
      %span.firstname= @user.first_name
      %span.lastname= @user.last_name
    .company
      %span.company_title= @user.job_title
      â€“
      %span.company_name= @user.company_name
      %span.partner_id= @user.company_id
      %br/
      %span.address Expires #{l @user.expiration_date}
    .contact
      / %span.phone +1 (000) 000-0000
      %span.email= @user.email
  .col-xs-12.col-sm-12.col-md-12.col-lg-2.user-admin
    .btn-group.btn-group-sm.btn-group-vertical{role: "group"}
      / %button.btn.btn-default{type: "button"} Reset Password
      / %button.btn.btn-default{type: "button"} Edit Profile
      - if !current_user.root? && prolongation = @user.authentication_integration.directory_prolongations.last
        %button.btn.btn-default{data: {content: "Reason: #{prolongation.reason}", placement: "bottom", toggle: "popover", trigger: "hover"}}
          Extended
      - else
        %a.btn.btn-xs.btn-warning.prolong-account-link{href: '#', data: {target: '#prolong-account-modal', toggle: 'modal', id: @user.authentication_integration.id, username: @user.authentication_integration.username, date: bl(@user.prolong_date), name: @user.display_name}}
          Extend
      - if policy(@user).destroy?
        %a.btn.btn-danger{href: user_path(@user), rel: "nofollow", data: {confirm: "Do you want to delete this account? The users account will permanently be deleted.", method: "delete"}}
          Delete
