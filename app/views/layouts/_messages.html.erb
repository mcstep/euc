<%# Rails flash messages styled for Bootstrap 3.0 %>
<% flash.each do |name, entry| %>
	<% if entry.is_a?(Array) %>
		<% entry.each do |msg| %>
			<%= render partial: 'layouts/messages_entry', locals: { name: name, msg: msg.to_s } %>
		<% end %>
	<% else %>
		<%= render partial: 'layouts/messages_entry', locals: { name: name, msg: entry.to_s } %>
	<% end %>
<% end %>
