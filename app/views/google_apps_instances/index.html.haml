.col-md-12.col-sm-12.col-lg-12

  = render 'layouts/services_menu'

  .panel.panel-default
    = form_tag google_apps_instances_path, method: :get, class: 'panel-body' do |f|
      = link_to 'Add instance', new_google_apps_instance_path, class: 'btn btn-success pull-left'
      .input-group
        %input.form-control{name: "search", placeholder: "Search instances by admin email...", type: "text", value: params[:search]}
        %span.input-group-btn
          %button.btn.btn-default{type: "submit"} Search!

  .panel.panel-default
    .panel-heading
      %h3.panel-title
        = pluralize @google_apps_instances.size, 'google_apps_instance'
        found
    %table.table.table-striped.table-bordered
      %thead
        %tr
          %th Name
          %th Actions
      %tbody
        - @google_apps_instances.each do |google_apps_instance|
          %tr
            %td= google_apps_instance.title
            %td
              = link_to 'Edit', edit_google_apps_instance_path(google_apps_instance), class: 'btn btn-xs btn-warning'
              = link_to 'Delete', google_apps_instance, method: :delete, data: { confirm: 'This google_apps_instance will be deleted'}, class: "btn btn-xs btn-danger"