= bootstrap_form_for resource do |f|
  = f.text_field :display_name
  = f.text_field :group_region
  = f.text_field :group_name
  = f.text_field :username
  = f.text_field :password
  = f.text_field :security_token
  = f.text_field :client_id
  = f.text_field :client_secret
  = f.text_field :time_zone
  = f.text_field :common_locale
  = f.text_field :language_locale
  = f.text_field :email_encoding
  = f.text_field :profile_id
  = f.submit class: 'btn btn-success', style: 'width: 100%; margin-bottom: 30px'