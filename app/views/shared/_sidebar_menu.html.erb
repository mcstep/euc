<div id="sidebar-clear" class="main-sidebar fix-scroll">
  <div class="current-user">
   <% if current_user %>
      <br/>	
      <a href="#" class="name">
        <%= image_tag "http://www.localcrimenews.com/wp-content/uploads/2013/07/default-user-icon-profile.png", class: "avatar" %>
        <span>
          <%= current_user.display_name %>
          <i class="fa fa-chevron-down"></i>
        </span>
      </a>
      <ul class="menu">
        <li>
          <a href="#">Account settings</a>
        </li>
        <li>
          <a href="#">Help / Support</a>
        </li>
        <li>
          <a href="<%= log_out_path %>">Sign out</a>
        </li>
    <% end %>
      </ul>
  </div>
  <div class="menu-section">
    <h3>General</h3>
    <ul>
      <li class="option">
        <a href="<%= dashboard_path %>" class="active">
          <i class="ion-android-earth"></i> 
          <span>Dashboard</span>
        </a>
      </li>
      <% if current_user && policy(current_user).admin? %>

      <li class="option">
        <a href="#" data-toggle="sidebar">
          <i class="ion-person-stalker"></i> <span>Accounts</span>
          <i class="fa fa-chevron-down"></i>
        </a>
        <ul class="submenu">
          <li><a href="<%= new_invitation_path %>">Send Invitation</a></li>
          <li><a href="<%= invitations_path %>">Manage Accounts</a></li>
        </ul>
      </li>

    <% end %>
    </ul>
  </div>
  <div class="menu-section">
    <h3>Admin</h3>
    <ul>
      <% if current_user %>
      <li class="option">
        <a href="#" data-toggle="sidebar">
          <i class="ion-person"></i> <span>My account</span>
          <i class="fa fa-chevron-down"></i>
        </a>
        <ul class="submenu">
          <li><a href="#">Settings</a></li>
          <li><a href="#">Support</a></li>
          <li><a href="<%= log_out_path %>">Sign out</a></li>
        </ul>
      </li>
      <% else %>
        <li class="option">
          <a href="<%= log_in_path %>" class="active">
            <i class="ion-person"></i> 
            <span>Sign in</span>
          </a>
        </li>
      <% end %>
    </ul>
  </div>

   <% if current_user %>

  <div class="bottom-menu hidden-sm">
    <ul>
      <li><a href="#"><i class="ion-help"></i></a></li>
      <li><a href="#"><i class="ion-person"></i></a></li>
      <li><a href="<%= log_out_path %>"><i class="ion-log-out"></i></a></li>
    </ul>
  </div>

  <% end %>
</div>
